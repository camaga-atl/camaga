#http://stackoverflow.com/questions/3663520/php-auth-user-not-set?noredirect=1&lq=1
RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

# when user tries to access /login, ask user for authentication
<Files login>
AuthType Basic
AuthName "CAMAGA Protected Area"
AuthUserFile  /home/atlantacamaga/public_html/.htpasswd
Require valid-user
</Files>

<Files createForm.php>
AuthType Basic
AuthName "CAMAGA Protected Area"
AuthUserFile  /home/atlantacamaga/public_html/.htpasswd
Require valid-user
</Files>

<Files editForm.php>
AuthType Basic
AuthName "CAMAGA Protected Area"
AuthUserFile  /home/atlantacamaga/public_html/.htpasswd
Require valid-user
</Files>

<Limit POST PUT DELETE>
AuthType Basic
AuthName "CAMAGA Protected Area"
AuthUserFile  /home/atlantacamaga/public_html/.htpasswd
Require valid-user
</Limit>

# If user is already authenticated, redirect to main page
RewriteEngine on
RewriteRule ^login$ / [R]


